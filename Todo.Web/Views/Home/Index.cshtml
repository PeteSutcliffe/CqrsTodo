@model dynamic

@{
    Layout = null;
}

<!DOCTYPE html>
<html ng-app="todoApp">
<head>
    <title>TO DO List</title>
    <link href="../../Content/bootstrap.css" rel="stylesheet" />
    <link href="../../Content/bootstrap-theme.css" rel="stylesheet" />
    <script src="../../Scripts/Lib/angular.js"></script>
    <script src="../../Scripts/Lib/angular-resource.js"></script>
    <script>
    var model = {

    }

    var todoApp = angular.module("todoApp", ["ngResource"]);

    todoApp.run(function ($http) {
        $http.get("/api/TodoList").success(function (data) {
            model.lists = data;
        });
    });

    todoApp.filter("checkedItems", function () {
        return function (items, showComplete) {
            var resultArr = [];
            angular.forEach(items, function (item) {
                if (!item.done || showComplete) {
                    resultArr.push(item);
                }
            });
            return resultArr;
        }
    });

    todoApp.controller("ToDoCtrl", function ($scope) {
        $scope.todo = model;

        $scope.incompleteCount = function () {
            var count = 0;
            angular.forEach($scope.todo.items, function (item) {
                if (!item.done) {
                    count++;
                }
            });
            return count;
        }

        $scope.warningLevel = function () {
            return $scope.incompleteCount() < 3 ? "label-success" : "label-warning";
        }
        $scope.addNewItem = function (actionText) {
            $scope.todo.items.push({ action: actionText, done: false });
        }
    });

    todoApp
        .constant("listUrl", "/api/TodoList/")
        .controller("ListController", function ($scope, $resource, listUrl) {
            $scope.ProductsResource = $resource(listUrl + ":id", { id: "@@id" });

            $scope.listData = model;

            $scope.addTodo = function (newTodo) {
                new $scope.ProductsResource(newTodo).$save().then(function(savedTodo) {
                    $scope.listData.lists.push(savedTodo);
                    $scope.newTodo = null;
                });                
            }
        });
    </script>
</head>
<body ng-controller="ToDoCtrl">
    <div class="page-header">
        <h1>
            To Do Lists
            <span class="label label-default" ng-hide="incompleteCount()==0" ng-class="warningLevel()">
                {{incompleteCount()}}
            </span>
        </h1>
        <div ng-controller="ListController">
            <ul>
                <li ng-repeat="list in listData.lists">{{list.name}}</li>
                <li><input type="text" ng-model="newTodo.name"/><button ng-click="addTodo(newTodo)">Add</button></li>
            </ul>
        </div>
    </div>    
</body>
</html>